@model IdentitySample.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit";
    var iLoop = 0;
}


<div class="row x_title">
    <div class="col-xs-6">
        <h3>@ViewBag.Title</h3>
    </div>

</div>

<div class="x_panel">
    <div class="x_content">



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Edit User Form.</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Roles", new { @class = "control-label col-md-2" })
                    <span class=" col-md-10">
                        @foreach (var item in Model.RolesList)
                {
                    iLoop++;
                        <input type="checkbox" id="SelectedRole_@iLoop" name="SelectedRole_@iLoop" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                        <label for="SelectedRole_@iLoop">@item.Value</label>
                        <!--

                            @Html.Label("SelectedRole_" + iLoop, new { @class = "control-label" })

                            -->
                        }
                    </span>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>


    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
