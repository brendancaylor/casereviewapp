    @foreach (var sectionAnswer in Model.SectionAnswers)
    {
    <div class="panel-group" id="sectiions" role="tablist" aria-multiselectable="true" style="margin-bottom: 20px;">

        <div class="panel panel-default">

            <div class="panel-heading" role="tab">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#sections" href="#@sectionAnswer.ID" aria-expanded="true">
                        @sectionAnswer.SectionName
                    </a>
                </h4>
            </div>

            <div id="@sectionAnswer.ID" class="panel-collapse collapse" role="tabpanel">
                <div class="panel-body">

                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr class="success">
                                <th style="width: 30%;">
                                    Question
                                </th>
                                <th style="width: 55%;">
                                    Comments
                                </th>
                                <th style="width: 10%;">
                                    Compliant
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var answer in sectionAnswer.Answers)
                            {
                            <tr style="cursor: pointer;" data-toggle="modal" data-target="#myModal" onclick="loadModal(this)" id="@answer.ID">
                                <td>
                                    @answer.Question.QuestionName
                                </td>
                                <td>@Html.Raw(answer.Comments.Replace("\n", "<br />"))</td>
                                <td>
                                    @if (answer.Compliant.HasValue && answer.Compliant.Value)
                                    {
                                    <span>yes</span>
                                    }
                                    else if (answer.Compliant.HasValue)
                                    {
                                    <span>no</span>
                                    }
                                    else
                                    {
                                    <span>-</span>
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    }

