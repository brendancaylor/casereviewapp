@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Case Reviews</h1>
    <p class="lead">
        Manage the recording of compliance using the links below
    </p>




<div class="row">
    <div class="col-md-4">
        <h2>Case Reviews</h2>
        <p>
            Use this to record case reviews - each case will have the full list of questions to detail comments and compliance.
        </p>


        <p><a class="btn btn-default" href="@Url.Content("~/CaseReviewWorkSheets")">Case Reviews &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Standard Lines</h2>
        <p>
            Manage this list of standard responses to speed the process of answering each question.
        </p>
        <p><a class="btn btn-default" href="@Url.Content("~/StandardLines")">Standard Lines &raquo;</a></p>
    </div>
    
    <div class="col-md-4">
        <h2>Non Compliant Answers</h2>
        <p>
            Aggregates non-compliant  questions in a report format
        </p>
        <p><a class="btn btn-default" href="@Url.Content("~/NonCompliantReport")">Report &raquo;</a></p>
    </div>

</div>

