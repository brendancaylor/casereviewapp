@model CaseReview.WebApp.Models.StandardLine

@{
    ViewBag.Title = "Create Standard Line";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row x_title">
    <div class="col-xs-6">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="col-xs-6">


    </div>
</div>


<div class="x_panel">
    <div class="x_content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Line, htmlAttributes: new { @class = "control-label col-sm-1" })
                    <div class="col-sm-6">
                        @Html.EditorFor(model => model.Line, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Line, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-1">Type</label>
                    <div class="col-sm-6">

                        @Html.DropDownListFor(model => model.LineType, new List<SelectListItem>() { new SelectListItem { Text = "Comment" }, new SelectListItem { Text = "Feedback" } }, null, htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-11">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
