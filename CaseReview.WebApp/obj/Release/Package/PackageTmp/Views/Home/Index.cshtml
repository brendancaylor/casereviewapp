@{
    ViewBag.Title = "Case Review App";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <div class="page-title">
        <div class="title_left">
            <h3>@ViewBag.Title</h3>
        </div>
    </div>


    <p class="lead">
        Manage the recording of compliance
    </p>


    <div class="x_panel">
        <div class="x_title">
            <h2>Overview</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <ul class="list-unstyled timeline">
                <li>
                    <div class="block">
                        <div class="tags">
                            <a class="tag">
                                <span>Configure</span>
                            </a>
                        </div>
                        <div class="block_content">
                            <h2 class="title">
                                You decide on what to ask.
                            </h2>
                            <p class="excerpt">
                                Manage your 'review types' and the questions pertinent to your own needs
                            </p>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Record</span>
                            </a>
                        </div>
                        <div class="block_content">
                            <h2 class="title">
                                Completing reviews couldn't be easier
                            </h2>
                            <p class="excerpt">
                                Monitoring compliance and recording progress is made easy using maintainable 'Standardised
                                Responses'.
                            </p>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="block">
                        <div class="tags">
                            <a href="" class="tag">
                                <span>Monitor</span>
                            </a>
                        </div>
                        <div class="block_content">
                            <h2 class="title">
                                Review your overall performance
                            </h2>
                            <p class="excerpt">
                                Report on problem areas and monitor overall progress across the board
                            </p>
                        </div>
                    </div>
                </li>
            </ul>

        </div>
    </div>

</div>
